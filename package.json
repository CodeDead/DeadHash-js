{
  "name": "deadhash",
  "version": "2.0.0",
  "description": "Hash calculator",
  "homepage": "./",
  "private": true,
  "author": {
    "name": "CodeDead",
    "email": "admin@codedead.com",
    "url": "https://codedead.com"
  },
  "build": {
    "appId": "com.codedead.deadhash",
    "productName": "DeadHash",
    "copyright": "Copyright Â© 2020 ${author}",
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/Icon-512x512.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/Icon-512x512.png"
    }
  },
  "main": "public/electron.js",
  "dependencies": {
    "@material-ui/core": "^4.8.0",
    "@material-ui/icons": "^4.5.1",
    "axios": "^0.19.0",
    "cross-env": "^6.0.3",
    "crypto-js": "^3.1.9-1",
    "electron-is-dev": "^1.1.0",
    "react": "^16.12.0",
    "react-contexify": "^4.1.1",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder -w --publish=always",
    "build": "yarn react-build && yarn electron-build -w",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.0.1",
    "electron": "^7.1.5",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0"
  }
}
